/* pages/myinfo/cooperation/cooperation.wxss */
.coop-container{
  width: 100%;
  background: rgba(255,255,255,1);
}
	.co-co-formtitle{
	  width: 100%;
	  height: 180rpx;
	  display: flex;
	  flex-flow: column nowrap;
	  justify-content: center;
	  align-items: center;
	}
	.co-co-formtitle > text{
		font-size: 42rpx;
		color: #575757;
	}
	.co-co-formtitle text:last-child{
		font-size: 28rpx;
		color: #737373;
	}
	.co-co-formview{
		width: 95%;
		background: #FFFFFF;
		margin: -2% auto;
		padding: 5% 0;
		border-radius: 10rpx;
		display: flex;
		flex-flow: column nowrap;
		justify-content: center;
		align-items: center;
	}
		.co-co-formview input,textarea,button{
			width: 78%;
			height: 80rpx;
			margin-top: 3%;
			padding-left: 2%;
			color: #000;
			border: 1rpx solid rgba(0,0,0,0.1);
			border-radius: 10rpx;
		}
		.co-co-formview textarea{
			height: 200rpx;
			padding: 2% 0 0 2%;
		}
		.co-co-formview image{
		  width: 180rpx;
		  height: 180rpx;
		  padding: 28rpx;
		  background: rgba(0,0,0,0.1);
		  border-radius: 120rpx;
		}
		.co-co-formview button{
			width: 80%;
			line-height: 80rpx;
			color: #FFFFFF;
			background: #208DD7;
			padding-left: 0;
			border: none;
		}
			.co-co-formview button::after{
				border: none;
			}
			.placeholder{
				font-size: 28rpx;
			}
			.textarea-placeholder{
				font-size: 28rpx;
			}

