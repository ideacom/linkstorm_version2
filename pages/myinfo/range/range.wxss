page{
  height: 100%;
}
.range-container{
  width: 100%;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
  background: rgba(255,255,255,1);
}
  swiper{
    width: 100%;
    height: 1100rpx;
  }
    swiper-item{
      display: flex;
      flex-flow: column nowrap;
      justify-content: center;
      align-items: center;
    }
.ra-co-cardview{
  width: 80%;
  border: 1rpx solid rgba(0,0,0,0.1);
  border-radius: 15rpx;
  margin-top: 5%;
  display: inline-block;
}
  .ra-co-cardview text{
    color: rgba(0,0,0,0.3);
    font-size: 28rpx;
    text-align: center;
  }
  .ra-ca-viewtitle{
	  width: 100%;
	  height: 180rpx;
	  display: flex;
	  flex-flow: column nowrap;
	  justify-content: center;
	  align-items: center;
	}
    .ra-ca-viewtitle > text{
    	font-size: 42rpx;
    	color: #575757;
    }
      .ra-ca-viewtitle text:last-child{
      	font-size: 28rpx;
      	color: #737373;
      }
