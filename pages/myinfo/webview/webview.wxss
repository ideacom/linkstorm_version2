/* pages/myinfo/wxopen/wxopen.wxss */
.wxopen-container{
  width: 100%;
  display: flex;
  flex-flow: row;
  justify-content: center;
  align-items: center;
  background: rgba(255,255,255,1);
}
.wx-co-cardview{
  width: 80%;
  height: 1000rpx;
  border: 1rpx solid rgba(0,0,0,0.1);
  border-radius: 15rpx;
  margin-top: 5%;
}
.wx-co-cardview text{
  color: rgba(0,0,0,0.3);
  font-size: 28rpx;
  text-align: center;
}
.wx-ca-viewtitle{
	  width: 100%;
	  height: 180rpx;
	  display: flex;
	  flex-flow: column nowrap;
	  justify-content: center;
	  align-items: center;
	}
	.wx-ca-viewtitle > text{
		font-size: 42rpx;
		color: #575757;
	}
	.wx-ca-viewtitle text:last-child{
		font-size: 28rpx;
		color: #737373;
	}
	.wx-co-imgview{
		width: 95%;
		background: #FFFFFF;
		margin: -2% auto;
		border-radius: 10rpx;
		display: flex;
		flex-flow: column nowrap;
		justify-content: center;
		align-items: center;
	}
		.wx-co-imgview image:first-child{
		  width: 180rpx;
		  height: 180rpx;
		  padding: 28rpx;
		  background: rgba(0,0,0,0.1);
		  border-radius: 120rpx;
		}
    .wx-co-imgview image:last-child{
      width: 420rpx;
		  height: 420rpx;
      margin-top: 10%;
    }