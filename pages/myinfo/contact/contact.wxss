/* pages/myinfo/contact/contact.wxss */
.co-co-header{
  width: 100%;
  margin: 0 auto;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
}
.co-co-header image{
  width: 100%;
  height: 480rpx;
}
.co-co-header>text{
  font-size: 42rpx;
  text-align: center;
  color: #575757;
  margin: 2% 0 0 0;
}
.co-co-header text:last-child{
  font-size: 28rpx;
  text-align: center;
  padding: 0 5%;
  color: #575757;
}
.co-co-body{
  width: 100%;
  text-align: center;
}
.co-co-body > text{
  margin: 1% 0 1% 0;
  font-size: 28rpx;
  color: #575757;
  display: block;
}
.co-bo-columnview{
  width:inherit;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: center;
}
.co-bo-columnview > view{
  border-right: none;
}
.co-co-hover{
  background: rgba(80,80,80,0.1);
}
.co-co-column image{
  width: 120rpx;
  height: 120rpx;
}
.co-co-column{
  width: 50%;
  height: 300rpx;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
  border: 1rpx solid rgba(0,0,0,0.1);
}
.co-co-column text{
  font-size: 28rpx;
  color: #575757;
}
.co-bo-bottom{
  width: 90%;
  padding: 2% 5%;
}
.co-bo-bottom text{
  font-size: 26rpx;
  color: #575757;
}