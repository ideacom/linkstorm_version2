#container {
  width: 100%;
  background: #ececec;
}
.in-co-body{
  width: inherit;
  height: 625rpx;
  position: relative;
  background: #FFFFFF;
}
/*轮播图*/

swiper {
  height: 480rpx;
  z-index: 1;
}

.silder-image {
  width: 100%;
  height: 480rpx;
}

/*中间商家地址菜单栏*/

.body {
  width: 100%;
  position: absolute;
  top: 70%;
  z-index: 2;
}

.makeContactDisplay {
  width: 85%;
  height: 170rpx;
  margin: 2% auto;
  padding: 0 4%;
  border-radius: 10rpx;
  background: #fff;
  box-shadow: 0 0 15rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}

.makeContactDisplay image {
  width: 47rpx;
  height: 47rpx;
  padding: 20rpx;
  border: 5rpx solid #25a1fa;
  border-radius: 65rpx;
  margin-right: 1%;
}

.mcd-content-view1 text {
  color: #2c2c2c;
  font-size: 36rpx;
  font-weight: 700;
  flex: 1 0 auto;
}

.mcd-divider {
  width: 110%;
  margin: 2% 0 5% 0;
  border-top: 1rpx solid #ececec;
}

.mcd-content-view2 {
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
}

.mcd-content-view2 text {
  color: #2c2c2c;
  font-size: 28rpx;
  flex: 1 0 auto;
}

.mcd-content-view2 image {
  width: 40rpx;
  height: 40rpx;
  padding: 0;
  background: #fff;
  border-radius: 0;
  border: none;
  margin-right: 1%;
}

/*tag底部功能区*/

