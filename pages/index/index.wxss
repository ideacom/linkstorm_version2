/*
* Title m-column method2==>flex
*/
.in-ne-title{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: center;
}
.in-ti-news_divider{
  width: 1rpx;
  height: 45rpx;
  border-left: 1rpx solid rgba(50, 50, 50, 0.1);
}
.in-ne-title .in-ti-left,.in-ti-right{
  height: 98rpx;
  line-height: 98rpx;
  font-size: 28rpx;
}
.in-ne-title #selected{
  border-bottom: 1rpx solid #25a1fa;
}
.in-ne-box{
  width: inherit;
}
swiper{
  width: 100%;
  height: 700rpx;
}
.in-bo-item{
  width: inherit;
  height: 100rpx;
  display: flex;
  flex-flow: row  nowrap;
  justify-content: space-between;
  align-items: center;
}
.in-bo-item text:first-child{
  font-size: 28rpx;
}
.in-bo-item > text + text{
  color: #25a1fa;
  font-size: 28rpx;
}
.in-ne-box .in-bo-item_divider{
  width: inherit;
  height: 10rpx;
  border-top: 1rpx solid rgba(50, 50, 50, 0.1);
}
.in-bo-more{
  width: inherit;
  height: 100rpx;
  text-align: center;
  font-size: 28rpx;
}
.in-special_text{
  color: #505050;
}
.in-co-footer{
  width: 100%;
  text-align: center;
  margin-top: -10%;
}
.in-co-footer text{
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.3);
